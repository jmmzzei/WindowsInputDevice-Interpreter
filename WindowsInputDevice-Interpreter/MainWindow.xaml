<Window x:Class="WindowsInputDevice_Interpreter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsInputDevice_Interpreter"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200" Background="#000000" >
    <Grid>
        <ComboBox x:Name="comboPorts" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Grid.Row="1" Margin="0,10,0,0"/>
        <Button x:Name="btn1" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Bottom" BorderBrush="Transparent" Width="100" Margin="0,0,0,10" Background="#ffffff" Click="connect" Height="50"/>
    </Grid>
</Window>
